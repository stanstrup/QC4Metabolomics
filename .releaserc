{
  "branches": [
    "main",
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cd release-dist && zip -r ../QC4Metabolomics-demo-${nextRelease.version}.zip . && echo QC4Metabolomics-demo-${nextRelease.version}.zip > ../zip-filename.txt"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "${file:zip-filename.txt}",
            "label": "QC4Metabolomics Demo Bundle"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "bash -x ./setup/tag-docker-images.sh ${nextRelease.version}"
      }
    ]
  ]
}
